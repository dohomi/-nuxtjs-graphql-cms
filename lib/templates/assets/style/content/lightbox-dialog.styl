.lightbox:hover {
  cursor: pointer;
}

.dialog.lightbox-dialog {
  box-shadow: none;
  overflow: hidden;
  img {
    object-fit: contain;
    max-width: 100%;
    max-height: 100%;
    height: 100%
    vertical-align: middle
  }
  .card, .card-text {
    background-color: transparent;
  }
  .carousel {
    box-shadow: none;
    background-color: transparent;
    height: 80vh;
    .carousel__item {
      background-size: contain;
    }
  }
  .carousel__left, .carousel__right {
    .btn {
      background: rgba(158, 158, 158, 0.5)
    }
  }
  .fade {
    &-enter-active, &-leave-active, &-leave-to {
      transition: .3s ease-out
      position: absolute
      top: 0
      left: 0
    }
    &-enter, &-leave, &-leave-to {
      opacity: 0
    }
  }
}
